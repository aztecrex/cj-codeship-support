#!/bin/bash

if [ "$1" = "" ]; then
  cat << EOT >&2
Runs git with supplied arguments.

Special argument "sh" drops you in a shell.

EOT
  git version >&2
elif [ "$1" = "sh" ]; then
  exec /bin/bash
else
  mkdir -p ~/.ssh
  echo -e "Host github.com\n\tStrictHostKeyChecking no\n" >> ~/.ssh/config
  git "$@"
fi
